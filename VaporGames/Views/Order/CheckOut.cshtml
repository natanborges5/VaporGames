@model Order

<form asp-controller="Order" asp-action="CheckOut" method="Post">
  <div class="form-group">
    <label asp-for="FirstName" >Your First Name</label>
    <input asp-for="FirstName" type="text" class="form-control" placeholder="Enter Your First Name">
    <span asp-validation-for="FirstName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="LastName" >Your Last Name</label>
    <input asp-for="LastName" type="text" class="form-control" placeholder="Enter Your Last Name Name">
    <span asp-validation-for="LastName" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Address" >Your First Address</label>
    <input asp-for="Address" type="text" class="form-control" placeholder="Enter Your First Address">
    <span asp-validation-for="Address" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Address2" >Your Complement Address</label>
    <input asp-for="Address2" type="text" class="form-control" placeholder="Enter Your Complement Address">
    <span asp-validation-for="Address2" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="PostalCode" >Your Postal Code</label>
    <input asp-for="PostalCode" type="text" class="form-control" placeholder="Enter Your Postal Code">
    <span asp-validation-for="PostalCode" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="State" >Your State</label>
    <input asp-for="State" type="text" class="form-control" placeholder="Enter Your State">
    <span asp-validation-for="State" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="City" >Your City</label>
    <input asp-for="City" type="text" class="form-control" placeholder="Enter Your City">
    <span asp-validation-for="City" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Email" >Your Email</label>
    <input asp-for="Email" type="email" class="form-control" placeholder="Enter Your Email">
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Phone" >Your Phone</label>
    <input asp-for="Phone" type="tel" class="form-control" placeholder="Enter Your Phone">
    <span asp-validation-for="Phone" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>