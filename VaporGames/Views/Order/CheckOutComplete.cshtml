@model Order
<div class="jumbotron">
    <h2>@ViewBag.CheckOutCompleteMsg</h2>
</div>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Name</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
        @foreach(var itens in Model.OrderItens)
        {
            <tr>
              <td>
                  <img src="@itens.Game.ImageUrl">
              </td>
              <td>@itens.Game.Name</td>
              <td>@itens.Game.Price</td>
            </tr>
        }
        
  </tbody>
  <tfoot>
        <tr>
            <td colspan="3" class="text-right">Total:</td>
            <td class="text-right">
                @ViewBag.TotalValue.ToString("c")
            </td>
        </tr>
    </tfoot>
</table>